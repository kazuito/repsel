{
  "name": "repsel",
  "displayName": "Repsel",
  "description": "Replace within a Selection",
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.70.0"
  },
  "publisher": "kazuito",
  "galleryBanner": {
    "color": "#576472",
    "theme": "light"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kazuito/repsel.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kazuito/repsel/issues"
  },
  "keywords": [
    "replace",
    "selection"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Repsel",
      "properties": {
        "repsel.highlightColor": {
          "type": "string",
          "default": "green",
          "description": "Background color for the highlighted words.\nYou can use CSS colors or Hex color."
        }
      }
    },
    "commands": [
      {
        "command": "repsel.replaceInSelection",
        "title": "Replace in Selection"
      }
    ],
    "keybindings": [
      {
        "key": "alt+s",
        "command": "repsel.replaceInSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4",
    "@vscode/test-electron": "^2.0.3"
  }
}
